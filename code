<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task Manager Console</title>
  <style>
    body {
      background-color: #111;
      color: #0f0;
      font-family: monospace;
      padding: 20px;
    }
    #console {
      border: 1px solid #0f0;
      padding: 10px;
      height: 500px;
      overflow-y: scroll;
      white-space: pre-wrap;
      background: #000;
    }
    #input {
      width: 100%;
      background: #000;
      color: #0f0;
      border: none;
      font-family: monospace;
      font-size: 1em;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div id="console">Task Manager Console Ready\nType 'help' to list commands</div>
  <input id="input" type="text" autocomplete="off" autofocus placeholder="Type a command and press Enter" />
  
  <script>
    const input = document.getElementById("input");
    const consoleDiv = document.getElementById("console");

    const responses = {
      help: "Commands: help, date, list, add, fin, user",
      date: "Today's date is " + new Date().toLocaleDateString(),
      list: "No tasks yet.",
      user: "User management is not simulated.",
      add: "Task adding is not yet simulated.",
      fin: "Task removal is not yet simulated."
    };

    input.addEventListener("keydown", function (event) {
      if (event.key === "Enter") {
        const command = input.value.trim().toLowerCase();
        const output = responses[command] || `Unknown command: ${command}`;
        consoleDiv.textContent += `\n> ${command}\n${output}`;
        consoleDiv.scrollTop = consoleDiv.scrollHeight;
        input.value = "";
      }
    });
  </script>
</body>
</html>
